extends ../layout

block content
	#main-content
		.row
			.col-md-12
				.box.box-orange
					.box-title
						h3
							i.icon-file
							| Edit Food
						.box-tool
							a(data-action="collapse", href="#")
								i.icon-chevron-up
							a(data-action="close", href="#")
								i.icon-remove
					.box-content
						form(action="/addm365", class="form-horizontal", method="POST", enctype="multipart/form-data", id="addItemForm")
							.form-group
								label.col-sm-3.col-lg-2.control-label Tên
								.col-sm-9.col-lg-10.controls
									input.form-control#name(type='text', value='', name ="name", tabindex='1')
									input.form-control#typeSubmit(style='display:none;', type='text', value='Jack', name ="typeSubmit")
									input.form-control#itemid(style='display:none;', type='text', value=itemid, name ="itemid")
							.form-group
								label.col-sm-3.col-lg-2.control-label Bữa ăn
								.col-sm-9.col-lg-10.controls
									select#meals.form-control.chosen.chzn-done(data-placeholder='Choose a category', tabindex='2', style='', name ="meals")
										option(value='41') Sáng
										option(value='42') Trưa
										option(value='43') Chiều
										option(value='44') Tối
							.form-group
								label.col-sm-3.col-lg-2.control-label Cách nấu
								.col-sm-9.col-lg-10.controls
									select#cook.form-control.chosen.chzn-done(data-placeholder='Choose a category', tabindex='3', style='', name ="cook")
										option(value='51') Bột – Nghiền
										option(value='52') Cháo
										option(value='53') Cơm
										option(value='54') Canh – Soup
										option(value='55') Các món khác
							.form-group
								label.col-sm-3.col-lg-2.control-label Độ tuổi
								.col-sm-9.col-lg-10.controls
									select#age.form-control.chosen.chzn-done(data-placeholder='Choose a category', tabindex='4', style='', name ="age")
										option(value='61') 6-10 tháng
										option(value='62') 11-18 tháng
										option(value='63') 19-36 tháng
							.form-group
								label.col-sm-3.col-lg-2.control-label Nguyên liệu chính
								.col-sm-9.col-lg-10.controls
									select#mainmaterial.form-control.chosen.chzn-done(data-placeholder='Choose a category', tabindex='5', style='', name ="mainmaterial")
										option(value='71') Heo
										option(value='72') Bò
										option(value='73') Gà
										option(value='74') Hải sản
										option(value='75') Rau củ quả
										option(value='76') Nguyên liệu khác
							.form-group
								label.col-sm-3.col-lg-2.control-label Mô tả
								.col-sm-9.col-lg-10.controls
									textarea.form-control#description(rows='6', name = "description", tabindex='6')
							.form-group
								label.col-sm-3.col-lg-2.control-label Nguyên liệu
								.col-sm-9.col-lg-10.controls
									textarea.form-control#material(rows='6', name = "material", tabindex='7')
							.form-group
								label.col-sm-3.col-lg-2.control-label Cách làm
								.col-sm-9.col-lg-10.controls
									textarea.form-control#method(rows='6', name = "method", tabindex='8')
							.form-group
								label.col-sm-3.col-lg-2.control-label
								.col-sm-9.col-lg-10.controls
									#imageloadstatus(style='display: none;')
										img(src='/images/loader.gif', alt='Uploading....')
									#imageloadbutton
										input#photoimg(type='file', name='photos[]', multiple='true', tabindex='9')
							.form-group
								label.col-sm-3.col-lg-2.control-label 
								.col-sm-9.col-lg-10.controls
									label#label1(type='label', name ="label1") Hình ảnh (Dưới 20KB)
							.form-group
								label.col-sm-3.col-lg-2.control-label
								.col-sm-9.col-lg-10.controls
									#listImage
							.form-group
								label.col-sm-3.col-lg-2.control-label
								.col-sm-9.col-lg-10.controls
									button.btn.btn-primary(type='submit',id = "btnSave", tabindex='10') Submit
									button.btn(type='button', id = "btnCancel", tabindex='11') Cancel
