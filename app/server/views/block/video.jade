extends ../layout

block content
	#main-content
		.row
			.col-md-12
				.box.box-orange
					.box-title
						h3
							i.icon-file
							| Edit Video
						.box-tool
							a(data-action="collapse", href="#")
								i.icon-chevron-up
							a(data-action="close", href="#")
								i.icon-remove
					.box-content
						form(action="/addvideo", class="form-horizontal", method="POST", enctype="multipart/form-data", id="addItemForm")
							.form-group
								label.col-sm-3.col-lg-2.control-label Tên
								.col-sm-9.col-lg-10.controls
									input.form-control#name(type='text', value='', name ="name", tabindex='1')
									input.form-control#typeSubmit(style='display:none;', type='text', value='Jack', name ="typeSubmit")
									input.form-control#itemid(style='display:none;', type='text', value=itemid, name ="itemid")
							.form-group
								label.col-sm-3.col-lg-2.control-label Danh mục
								.col-sm-9.col-lg-10.controls
									select#videocate.form-control.chosen.chzn-done(data-placeholder='Choose a category', tabindex='2', style='', name ="videocate")
							.form-group
								label.col-sm-3.col-lg-2.control-label Clip Url
								.col-sm-9.col-lg-10.controls
									input.form-control#clip(type='text', value='', name ="clip", tabindex='3')
							.form-group
								label.col-sm-3.col-lg-2.control-label Image
								.col-sm-9.col-lg-10.controls
									#imageloadstatus(style='display: none;')
										img(src='/images/loader.gif', alt='Uploading....')
									#imageloadbutton
										input#photoimg(type='file', name='photos[]', multiple='true', tabindex='4')
							.form-group
								label.col-sm-3.col-lg-2.control-label
								.col-sm-9.col-lg-10.controls
									#listImage
							.form-group
								label.col-sm-3.col-lg-2.control-label
								.col-sm-9.col-lg-10.controls
									button.btn.btn-primary(type='submit',id = "btnSave", tabindex='5') Submit
									button.btn(type='button', id = "btnCancel", tabindex='6') Cancel
